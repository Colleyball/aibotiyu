page, .page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
   background: url("http://www.aibojiaoyu.cn/ImgFiles/ABSports/wechatApp/box-bg/1-blur.jpg") no-repeat top fixed;
  background-size: cover;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "微软雅黑"
}

.top-bar {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 60rpx;
  text-align: center;
  padding: 0 0 0 0rpx;
  color: white
}

.list {
  width: 680rpx;
  margin: 0rpx 0 0 0rpx;
  padding: 0 0 20rpx 0
}

.box-wide {
  display: -webkit-flex;
  display: flex;
  margin: 55rpx 0 20rpx 0;
  padding: 0;
  width: 680rpx;
  height: 320rpx;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-align-items: center;
  align-items: center;
  border-radius: 15rpx;
}

.box-wide-pic {
  margin: 0rpx;
  width: 680rpx;
  height: 320rpx;
  opacity: 1;
  border-radius: 15rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
}

.box-wide-TxtZh {
  margin-top: -300rpx;
  width: 80%;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
  color: rgba(255, 255, 255, 1);
  text-align: left;
  font-size: 80rpx;
}

.box-wide-TxtEn {
  margin-top: 10rpx;
  margin-bottom: 120rpx;
  width: 80%;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  font-size: 40rpx;
}

.name {
  background: url("http://www.aibojiaoyu.cn/ImgFiles/ABSports/wechatApp/box-bg/1.jpg");
  background-size: 750rpx auto;
  background-position: center 0rpx
}

.no {
  background: url("http://www.aibojiaoyu.cn/ImgFiles/ABSports/wechatApp/box-bg/1.jpg");
  background-size: 750rpx auto;
  background-position: center -370rpx
}

.time {
  background: url("http://www.aibojiaoyu.cn/ImgFiles/ABSports/wechatApp/box-bg/1.jpg");
  background-size: 750rpx auto;
  background-position: center -750rpx
}

.cover {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.9)
}

.serach-box {
  width: 600rpx;
  height: auto;
  position: fixed;
  display: flex;
  flex-direction: column;
  background: white;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  top: 300rpx;
  left: 75rpx;
  align-items: center;
  box-shadow: 0rpx 0rpx 25rpx rgba(0, 0, 0, 0.1);
   padding: 50rpx 0
}

.search-type {
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size:40rpx;
  color: rgba(0, 0, 0, 0.8);
}

.search-input {
  font-size: 40rpx;
	display: flex;
	width: 500rpx;
	height: 80rpx;
	line-height: 80rpx;
	flex-direction: row;
	background-color: whitesmoke;
	margin: 50rpx 0 0rpx 0;
	text-align: center;
  border-radius: 5rpx
}

.search-tip {
  font-size: 30rpx;
	width: 500rpx;
	height: 28rpx;
	line-height: 30rpx;
	margin: 10rpx 0 0 0;
	text-align: center;
  color: rgba(0, 0, 0, 0.6)
}

.search-button {
  width: 500rpx;
  height: 100rpx;
  line-height:100rpx;
  background-color:whitesmoke;
  text-align: center;
  font-size: 40rpx;
  border: 2rpx solid skyblue;
  margin: 50rpx 0 0 0;
  border-radius: 10rpx
}

.cancel {
  border: 2rpx solid silver;
}