.list {
	width: 680rpx;
	margin: 0rpx 0 0 35rpx;
  padding: 0 0 35px 0;
}

.text-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 55rpx;
  margin: 75rpx 0 20rpx 0;
  color: black;
}

.sub-title {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 35rpx;
  margin: 0rpx 0 20rpx 0;
  color: #555555;
}

.apply-info {
  width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
  display: flex;
  flex-direction: row;
  margin: 0 0 30rpx 0;
  justify-content: space-between
}

.apply-info-title {
  width: 35%;
  height: 80rpx;
	line-height: 80rpx;
	background-color: whitesmoke;
	border-radius: 0rpx;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0);
  color: #555555
}

.apply-info-content {
  width: 60%;
  height: 80rpx;
	line-height: 80rpx;
	background-color: whitesmoke;
	border-radius: 0rpx;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0);
  color: #555555
}

.submit {
  width: 676rpx;
  height: 100rpx;
  line-height:100rpx;
  background-color:whitesmoke;
  text-align: center;
  font-size: 40rpx;
  border: 2rpx solid skyblue;
  margin: 50rpx 0 0 0;
}