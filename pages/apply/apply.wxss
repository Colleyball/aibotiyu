page, .page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
   background: url("http://www.aibojiaoyu.cn/ImgFiles/ABSports/wechatApp/box-bg/2-blur.jpg") no-repeat top fixed;
  background-size: cover;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "微软雅黑"
}

.top-bar {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 60rpx;
  text-align: center;
  padding: 0 0 0 0rpx;
  color: white;
  text-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.2);
}

.list {
  width: 680rpx;
  margin: 0rpx 0 0 0rpx;
  padding: 0 0 30rpx 0
}

.text-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 55rpx;
  margin: 75rpx 0 20rpx 0;
  color: whitesmoke;
  text-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.2);
}

.sub-title {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 35rpx;
  margin: 0rpx 0 20rpx 0;
  color: white
}


.inputView {
	font-size: 40rpx;
	display: -webkit-flex;
	display: flex;
	width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
	-webkit-flex-direction: row;
	flex-direction: row;
	background-color: whitesmoke;
	margin: 0 0 30rpx 0;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 40rpx
}

.input-tip {
  font-size:30rpx;
  width:100%;
  height:30rpx;
  line-height:30rpx;
  margin:-20rpx 0 5rpx 0;
  text-align:center;
  color:rgba(0, 0, 0, 0.6)
}

.actionSheetView {
  font-size: 40rpx;
	width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
	background-color: whitesmoke;
	margin: 0 0 30rpx 0;
	text-align: center;
  color: #555555;
  box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 40rpx
}

.set-class-week-time {
  width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
  display: flex;
  flex-direction: row;
  margin: 0 0 30rpx 0;
  justify-content: space-between
}

.class-week {
  width: 35%;
  height: 80rpx;
	line-height: 80rpx;
	background-color: whitesmoke;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  color: #555555
}

.class-time {
  width: 60%;
  height: 80rpx;
	line-height: 80rpx;
	background-color: whitesmoke;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  color: #555555
}

.submit {
  width: 676rpx;
  height: 100rpx;
  line-height:100rpx;
  background-color:whitesmoke;
  text-align: center;
  font-size: 40rpx;
  border: 2rpx solid skyblue;
  margin: 50rpx 0 0 0;
  box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 50rpx
}